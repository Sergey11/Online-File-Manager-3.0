doctype
html
  head
    title FileManager
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  body
    wrapper
      .container-fluid
        .row-fluid
          header.span12
            = render 'shared/header'
            = render 'shared/flash_message'
          .navigation.span12
            = render 'shared/navigation'
          .controls.span12
            | control buttons here
          .content.row-fluid
            .span2
              .favourite
              .tree_menu
            .span10
              = yield
      footer.footer
        = render 'shared/footer'